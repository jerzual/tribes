{
  "name": "tribes",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "parcel serve app/index.pug",
    "build": "cross-env NODE_ENV=production parcel build app/index.pug --public-url .",
    "watch": "parcel watch app/index.pug",
    "watch:server": "nodemon",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "server": "ts-node app/server",
    "lint": "tslint app/*.ts{,x} app/**/*.ts{,x}",
    "test": "jest"
  },
  "dependencies": {
    "babylonjs": "^3.3.0",
    "css-module-types": "^0.2.2",
    "dat-gui": "^0.5.0",
    "delaunay": "^0.4.0",
    "express": "^4.16.4",
    "fast-simplex-noise": "^3.2.1",
    "hammerjs": "^2.0.8",
    "inferno": "^7.1.9",
    "inferno-animation": "^7.0.0",
    "inferno-router": "^7.1.9",
    "inferno-server": "^7.1.9",
    "koa": "^2.7.0",
    "mongodb": "^3.1.13",
    "reactive-state": "^3.2.1",
    "reflect-metadata": "^0.1.13",
    "rng-js": "^1.0.1",
    "rxjs": "^6.4.0",
    "typeorm": "^0.2.14"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.9",
    "@types/koa": "^2.0.48",
    "@types/node": "^11.9.6",
    "babel-plugin-inferno": "^6.0.5",
    "cross-env": "^5.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "inferno-test-utils": "^7.1.9",
    "jest": "^24.1.0",
    "jsdom": "^13.2.0",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4",
    "pug": "^2.0.4",
    "sass": "^1.17.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  }
}
